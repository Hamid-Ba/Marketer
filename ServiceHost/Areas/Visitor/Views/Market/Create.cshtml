@model Marketer.Application.Contract.ViewModels.Products.CreateMarketVM


<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ایجاد فروشگاه جدید</h4>
</div>

<form asp-area="Visitor" asp-controller="Market" asp-action="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Owner" class="control-label">صاحب مارکت</label>
                    <input type="text" class="form-control" asp-for="Owner">
                    <span asp-validation-for="Owner" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="MobilePhone" class="control-label">شماره موبایل</label>
                    <input type="text" class="form-control" asp-for="MobilePhone">
                    <span asp-validation-for="MobilePhone" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام مارکت</label>
                    <input type="text" class="form-control" asp-for="Name">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="CityId" class="control-label">شهر</label>
                    <select asp-for="CityId" asp-items="@ViewBag.Cities" class="form-control">
                        <option value="0">انتخاب کنید...</option>
                    </select>
                    <span asp-validation-for="CityId" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group no-margin">
                    <label asp-for="Address" class="control-label">آدرس</label>
                    <textarea class="form-control autogrow" asp-for="Address"
                              style="overflow: hidden; word-wrap: break-word; resize: horizontal; height: 104px;"></textarea>
                    <span asp-validation-for="Address" class="error"></span>
                </div>
            </div>
        </div>

    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ایجاد</button>
    </div>
</form>