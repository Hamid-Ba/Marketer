@model IEnumerable<Marketer.Application.Contract.ViewModels.Orders.OrderVM>
@using Framework.Application
@{
    ViewData["Title"] = "سفارشات";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["title"]</h4>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست گروه سفارشات</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>کد سفارش</th>
                                    <th>مارکت</th>
                                    <th>مبلغ کل</th>
                                    <th>مبلغ تخفیف</th>
                                    <th>مبلغ پرداخت شده</th>
                                    <th>وضعیت سفارش</th>
                                    <th>تاریخ پرداخت</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.RefId</td>
                                        <td>@order.MarketName</td>
                                        <td>@order.TotalPrice.ToMoney()</td>
                                        <td>@order.TotalDiscount.ToMoney()</td>
                                        <td>@order.PayAmount.ToMoney()</td>
                                        <td>@order.Status.GetEnumName()</td>
                                        <td>@order.PlaceOrderDate.ToFarsi()</td>
                                       
                                        <td>
                                            
                                            <a class="btn btn-primary pull-right m-rl-5"
                                               href="#showmodal=@Url.Action("GetItems", "Order", new {id = order.Id , area="Visitor"})">
                                                آیتم
                                            </a>

                                              <a class="btn btn-info pull-right m-rl-5"
                                               href="#showmodal=@Url.Action("Market", "Order", new {marketId = order.MarketId , area="Visitor"})">
                                                <i class="fa fa-user"></i>
                                            </a>
                                           
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}
