@model IEnumerable<Marketer.Application.Contract.ViewModels.Orders.OrderItemVM>
@using Framework.Application

@{
    ViewData["Title"] = "آیتم ها";
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">آیتم محصولات</h4>
</div>

<div class="modal-body">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>محصول</th>
                <th>تعداد</th>
                <th>قیمت واحد(تومان)</th>
                <th>مبلغ تخفیف(تومان)</th>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="text-center">
                    <td>@item.Id</td>
                    <td>@item.ProductTitle</td>
                    <td>@item.Count</td>
                    <td>@item.PayAmount.ToMoney()</td>
                    <td>@item.DiscountPrice.ToMoney()</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
</div>