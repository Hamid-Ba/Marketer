@model Marketer.Application.Contract.ViewModels.Orders.ChangeStatusOrderVM

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">تغییر وضعیت سفارش</h4>
</div>

<form asp-area="Admin" asp-controller="Order" asp-action="ChangeStatus"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      >
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Status" class="control-label">وضعیت</label>
                    <select class="form-control" asp-for="Status">
                        <option value="0"> وضعیت ... </option>
                        <option value="1"> سفارش ایجاد گشت </option>
                        <option value="2"> در حال آماده سازی سفارش </option>
                        <option value="3"> در حال ارسال </option>
                        <option value="4"> تحویل داده شد </option>
                    </select>
                    <span asp-validation-for="Status" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <input type="hidden" asp-for="Id"/>
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">تغییر وضعیت</button>
    </div>
</form>