@model Marketer.Application.Contract.ViewModels.Extera.CreateContactUs
@using Marketer.Query.Queries.Settings

@{
    ViewData["Title"] = "تماس با ما";

    SettingQueryVM settings = ViewBag.Settings;
}

<!-- ! contact US -->
<div class="container contactus-form mt-5">
    <div class="row">
        <div class="col-sm-12 col-md-6">
            <form asp-area="" asp-controller="Home" asp-action="ContactUs" method="post">
                <div class="">
                    <label for="">نام و نام خانوادگی</label>
                    <br>
                    <input type="text" asp-for="FullName" placeholder="نام خود را وارد کنید">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="">
                    <label for="">شماره تماس</label>
                    <br>
                    <input type="text" asp-for="MobilePhone" placeholder="مثال : 0933******">
                    <span asp-validation-for="MobilePhone" class="text-danger"></span>
                </div>
                <div class="">
                    <textarea asp-for="Message" id="" rows="10" placeholder="متن خود را وارد کنید"></textarea>
                </div>
                <button type="submit" class="btn btn-secondary w-25">ارسال</button>
            </form>
        </div>
        <div class="col-sm-12 col-md-6">
            <div class="contactus-title">
                <p class="h4">راه های ارتباطی</p>
            </div>
            <div class="contactus-detail">
                <p>
                    : تلفن پشتیبانی
                    <br>
                    @if (!string.IsNullOrWhiteSpace(settings.Mobiles))
                    {
                        @foreach (var mobile in settings.Mobiles.Split(","))
                        {
                            <span>@mobile</span>
                            <br>
                        }
                    }
                </p>
                <p>
                    : پست الکترونیک
                    <br>
                    @if (!string.IsNullOrWhiteSpace(settings.Emails))
                    {
                        @foreach (var email in settings.Emails.Split(","))
                        {
                            <span>@email</span>
                            <br>
                        }
                    }
                </p>
            </div>
        </div>
    </div>
</div>
<!-- ! contact US -->